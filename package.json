{
    "name": "estack",
    "version": "0.12.0",
    "description": "simple bundle generator",
    "module": "src/cli.js",
    "main": "cli.js",
    "scripts": {
        "clear": "rm -rf ./test/basic/dest && rm -rf ./test/basic/public",
        "test": "npm run clear && ava",
        "build": "rollup -c",
        "dev": "rollup -c -w",
        "dev:doc": "node cli.js example/{src,template}/**/*.{html,md} --dev",
        "build:doc": "node cli.js example/{src,template}/**/*.{html,md} docs --build",
        "prepare": "npm run build && npm run test"
    },
    "author": "UpperCod",
    "license": "ISC",
    "publishConfig": {
        "access": "public"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/atomicojs/estack"
    },
    "bin": {
        "estack": "./cli.js"
    },
    "dependencies": {
        "rollup": "^2.16.1"
    },
    "devDependencies": {
        "@atomico/kit": "^0.3.7",
        "@rollup/plugin-commonjs": "^11.1.0",
        "@rollup/plugin-json": "^4.0.3",
        "@rollup/plugin-node-resolve": "^7.1.3",
        "@rollup/plugin-replace": "^2.3.1",
        "@rollup/plugin-sucrase": "^3.0.2",
        "atomico": "^0.23.3",
        "ava": "^3.8.1",
        "builtin-modules": "^3.1.0",
        "chokidar": "^3.3.1",
        "colors": "^1.4.0",
        "entities": "^2.0.2",
        "esm": "^3.2.25",
        "fast-glob": "^3.2.2",
        "html-escaper": "^3.0.0",
        "http-proxy": "^1.18.1",
        "js-yaml": "^3.13.1",
        "liquidjs": "^9.14.0",
        "log-update": "^4.0.0",
        "magic-string": "^0.25.7",
        "marked": "^0.8.1",
        "polka": "^0.5.2",
        "prismjs": "^1.19.0",
        "puppeteer": "^3.0.2",
        "resolve": "^1.17.0",
        "sade": "^1.7.3",
        "sirv": "^0.4.2",
        "stylis": "^4.0.1",
        "terser": "^4.6.13"
    },
    "optionalDependencies": {
        "fsevents": "~2.1.2"
    },
    "ava": {
        "require": [
            "esm"
        ],
        "files": [
            "test/**/*.test.js",
            "src/**/*.test.js"
        ]
    },
    "prettier": {
        "tabWidth": 4,
        "singleQuote": false
    }
}
