{
  "name": "bundle-cli",
  "version": "0.22.0",
  "description": "simple bundle generator",
  "module": "src/cli.js",
  "main": "cli.js",
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "build:example:watch": "node cli.js example/src/*.{html,md} example/dest --watch  --server --template example/template.html",
    "build:example": "node cli.js example/src/*.{html,md} example/dest --minify --template example/template.html --sizes",
    "prepare": "npm run build"
  },
  "author": "UpperCod",
  "license": "ISC",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/atomicojs/bundle-cli"
  },
  "dependencies": {
    "@atomico/rollup-plugin-sizes": "^1.1.3",
    "@babel/core": "^7.9.0",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-proposal-optional-chaining": "^7.9.0",
    "@babel/plugin-syntax-nullish-coalescing-operator": "^7.8.3",
    "@babel/plugin-transform-react-jsx": "^7.9.1",
    "@babel/preset-env": "^7.9.0",
    "@babel/preset-typescript": "^7.9.0",
    "@rollup/plugin-commonjs": "^11.0.2",
    "@rollup/plugin-node-resolve": "^7.1.1",
    "@rollup/plugin-replace": "^2.3.1",
    "chokidar": "^3.3.1",
    "cssnano": "^4.1.10",
    "fast-glob": "^3.2.2",
    "handlebars": "^4.7.3",
    "js-yaml": "^3.13.1",
    "koa": "^2.11.0",
    "koa-send": "^5.0.0",
    "log-update": "^4.0.0",
    "marked": "^0.8.1",
    "parse5": "^5.1.1",
    "postcss": "^7.0.27",
    "postcss-import": "^12.0.1",
    "postcss-preset-env": "^6.7.0",
    "prismjs": "^1.19.0",
    "rollup": "^2.3.3",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-terser": "^5.3.0",
    "sade": "^1.7.3"
  },
  "bin": {
    "bundle": "./cli.js"
  }
}
