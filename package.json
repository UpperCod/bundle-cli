{
    "name": "estack",
    "version": "0.16.0",
    "description": "simple bundle generator",
    "module": "src/cli.js",
    "main": "cli.js",
    "scripts": {
        "clear": "rm -rf ./test/basic/dest && rm -rf ./test/basic/public",
        "test": "npm run clear && ava",
        "build": "rollup -c",
        "dev": "rollup -c -w",
        "dev:doc": "node cli.js dev site/index.html",
        "build:doc": "node cli.js build site/index.html",
        "prepare": "npm run build && npm run test"
    },
    "author": "UpperCod",
    "license": "ISC",
    "publishConfig": {
        "access": "public"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/atomicojs/estack"
    },
    "bin": {
        "estack": "./cli.js"
    },
    "dependencies": {},
    "estack": {
        "build": {
            "css": {
                "cssnano": {}
            }
        }
    },
    "devDependencies": {
        "@atomico/kit": "^0.3.7",
        "@babel/code-frame": "^7.10.4",
        "@estack/postcss-import": "^1.0.0",
        "@rollup/plugin-commonjs": "^11.1.0",
        "@rollup/plugin-json": "^4.0.3",
        "@rollup/plugin-node-resolve": "^7.1.3",
        "@rollup/plugin-replace": "^2.3.1",
        "@rollup/plugin-sucrase": "^3.0.2",
        "@rollup/plugin-typescript": "^5.0.2",
        "@types/colors": "^1.2.1",
        "@types/js-yaml": "^3.12.5",
        "@types/polka": "^0.5.1",
        "@types/sade": "^1.7.2",
        "@uppercod/cache": "^1.0.0",
        "@uppercod/find-port": "^1.0.0",
        "@uppercod/get-prop": "^1.0.1",
        "@uppercod/hash": "^1.0.0",
        "@uppercod/imported": "^1.3.3",
        "@uppercod/map-object": "^1.1.1",
        "@uppercod/normalize-indentation": "^1.0.0",
        "@uppercod/postcss-import": "^1.2.1",
        "@uppercod/request": "^1.1.2",
        "@uppercod/str-fragment": "^1.1.1",
        "atomico": "^1.0.5",
        "ava": "^3.10.1",
        "builtin-modules": "^3.1.0",
        "chalk": "^4.1.0",
        "chokidar": "^3.3.1",
        "colors": "^1.4.0",
        "cssnano": "^4.1.10",
        "es-module-lexer": "^0.3.24",
        "esm": "^3.2.25",
        "fast-glob": "^3.2.4",
        "html-escaper": "^3.0.0",
        "http-proxy": "^1.18.1",
        "js-yaml": "^3.14.0",
        "liquidjs": "^9.14.0",
        "log-update": "^4.0.0",
        "magic-string": "^0.25.7",
        "marked": "^0.8.1",
        "mime": "^2.4.6",
        "polka": "^0.5.2",
        "postcss": "^7.0.32",
        "prismjs": "^1.19.0",
        "puppeteer": "^3.0.2",
        "resolve": "^1.17.0",
        "rollup": "^2.26.10",
        "rollup-plugin-import-url": "^1.0.1",
        "rollup-plugin-typescript": "^1.0.1",
        "sade": "^1.7.3",
        "sirv": "^0.4.2",
        "stylis": "^4.0.1",
        "stylis-pack": "^1.2.3",
        "terser": "^4.8.0",
        "typescript": "^4.0.2"
    },
    "peerDependencies": {
        "postcss": "^7.0.32",
        "@rollup/plugin-typescript": ">=5.0.2"
    },
    "optionalDependencies": {
        "fsevents": "~2.1.2"
    },
    "ava": {
        "require": [
            "esm"
        ],
        "files": [
            "test/**/*.test.js",
            "src/**/*.test.js"
        ]
    },
    "prettier": {
        "tabWidth": 4,
        "singleQuote": false
    },
    "postcss": {
        "build": {
            "cssnano": {
                "preset": "default"
            }
        }
    }
}
