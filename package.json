{
  "name": "bundle-cli",
  "version": "0.7.0",
  "description": "simple bundle generator",
  "module": "src/cli.js",
  "main": "cli.js",
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "build:example": "node cli.js example/src/*.html,example/src/*.css example/dist",
    "build:example:watch": "node cli.js example/src/**.html,example/src/*.css example/dist -w --server --minify",
    "prepare": "npm run build"
  },
  "author": "UpperCod",
  "license": "ISC",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/atomico/bundle"
  },
  "dependencies": {
    "@atomico/rollup-plugin-sizes": "^1.0.3",
    "@babel/core": "^7.7.4",
    "@babel/plugin-transform-react-jsx": "^7.7.4",
    "@babel/preset-env": "^7.7.4",
    "@babel/preset-typescript": "^7.7.4",
    "chokidar": "^3.3.0",
    "cssnano": "^4.1.10",
    "fast-glob": "^3.1.0",
    "parse5": "^5.1.1",
    "picomatch": "^2.1.1",
    "postcss": "^7.0.23",
    "postcss-import": "^12.0.1",
    "postcss-preset-env": "^6.7.0",
    "rollup": "^1.27.5",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-terser": "^5.1.2",
    "sade": "^1.6.1"
  },
  "bin": {
    "bundle": "./cli.js"
  }
}
