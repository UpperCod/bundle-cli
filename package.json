{
  "name": "bundle-cli",
  "version": "0.25.1",
  "description": "simple bundle generator",
  "module": "src/cli.js",
  "main": "cli.js",
  "scripts": {
    "clear": "rm -rf ./test/basic/dest && rm -rf ./test/basic/public",
    "test": "npm run clear && ava",
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "build:example:watch": "node cli.js example/src/**/*.{html,md} example/dest --server --watch",
    "build:example": "node cli.js example/src/*.{html,md} example/dest --minify --sizes --server",
    "prepare": "npm run build && npm run test"
  },
  "author": "UpperCod",
  "license": "ISC",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/atomicojs/bundle-cli"
  },
  "dependencies": {
    "rollup": "^2.10.0"
  },
  "bin": {
    "bundle": "./cli.js"
  },
  "devDependencies": {
    "@atomico/rollup-plugin-sizes": "^1.1.3",
    "@rollup/plugin-commonjs": "^11.1.0",
    "@rollup/plugin-json": "^4.0.3",
    "@rollup/plugin-node-resolve": "^7.1.3",
    "@rollup/plugin-replace": "^2.3.1",
    "@rollup/plugin-sucrase": "^3.0.1",
    "ava": "^3.8.1",
    "builtin-modules": "^3.1.0",
    "chokidar": "^3.3.1",
    "entities": "^2.0.2",
    "fast-glob": "^3.2.2",
    "http-proxy-middleware": "^1.0.3",
    "js-yaml": "^3.13.1",
    "liquidjs": "^9.12.0",
    "log-update": "^4.0.0",
    "magic-string": "^0.25.7",
    "marked": "^0.8.1",
    "parse5": "^5.1.1",
    "polka": "^0.5.2",
    "prismjs": "^1.19.0",
    "puppeteer": "^3.0.2",
    "resolve": "^1.17.0",
    "sade": "^1.7.3",
    "sirv": "^0.4.2",
    "stylis": "^4.0.0",
    "terser": "^4.6.13"
  },
  "optionalDependencies": {
    "fsevents": "~2.1.2"
  },
  "ava": {
    "files": [
      "test/**/*.test.js"
    ]
  }
}
