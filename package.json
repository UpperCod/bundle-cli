{
    "name": "estack",
    "version": "0.18.0",
    "description": "simple bundle generator",
    "module": "src/cli.js",
    "main": "cli.js",
    "scripts": {
        "clear": "rm -rf ./tests/basic/public",
        "test": "npm run clear && mocha -r  ts-node/register {tests,src}/**/*.test.ts",
        "build": "rollup -c",
        "dev": "rollup -c -w",
        "dev:site": "node cli.js dev site/**/*.{html,md};site/src/*.yaml --js estack.js",
        "build:site": "node cli.js build site/**/*.{html,md};site/src/*.yaml docs --href /estack/ --js estack.js",
        "prepare": "npm run build && npm run build:site && npm run test"
    },
    "author": "UpperCod",
    "license": "ISC",
    "publishConfig": {
        "access": "public"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/atomicojs/estack"
    },
    "bin": {
        "estack": "./cli.js"
    },
    "dependencies": {
        "chokidar": "^3.4.2",
        "postcss": "^8.0.6",
        "rollup": "^2.27.1",
        "sade": "^1.7.3"
    },
    "estack": {
        "js": {
            "plugins": {
                "@rollup/plugin-sucrase": {
                    "jsxPragma": "h",
                    "production": true,
                    "exclude": [
                        "node_modules/**"
                    ],
                    "transforms": [
                        "jsx",
                        "typescript"
                    ]
                }
            }
        }
    },
    "devDependencies": {
        "@rollup/plugin-commonjs": "^15.0.0",
        "@rollup/plugin-json": "^4.0.3",
        "@rollup/plugin-node-resolve": "^9.0.0",
        "@rollup/plugin-replace": "^2.3.3",
        "@rollup/plugin-sucrase": "^3.1.0",
        "@rollup/plugin-typescript": "^5.0.2",
        "@types/chai": "^4.2.12",
        "@types/colors": "^1.2.1",
        "@types/csso": "^3.5.1",
        "@types/html-escaper": "^3.0.0",
        "@types/js-yaml": "^3.12.5",
        "@types/marked": "^1.1.0",
        "@types/mime": "^2.0.3",
        "@types/mocha": "^8.0.3",
        "@types/prismjs": "^1.16.1",
        "@types/resolve": "^1.17.1",
        "@types/sade": "^1.7.2",
        "@uppercod/cache": "^1.0.0",
        "@uppercod/find-port": "^1.0.0",
        "@uppercod/get-prop": "^1.0.1",
        "@uppercod/hash": "^1.0.0",
        "@uppercod/map-object": "^1.1.2",
        "@uppercod/postcss-import": "^1.7.2",
        "@uppercod/request": "^1.1.2",
        "@uppercod/str-fragment": "^1.2.1",
        "atomico": "^1.2.1",
        "builtin-modules": "^3.1.0",
        "chai": "^4.2.0",
        "colors": "^1.4.0",
        "csso": "^4.0.3",
        "easy-tag-for-liquidjs": "^1.0.1",
        "esm": "^3.2.25",
        "fast-glob": "^3.2.4",
        "html-escaper": "^3.0.0",
        "js-yaml": "^3.14.0",
        "liquidjs": "^9.15.0",
        "magic-string": "^0.25.7",
        "marked": "^1.1.1",
        "mime": "^2.4.6",
        "mocha": "^8.1.3",
        "prismjs": "^1.19.0",
        "resolve": "^1.17.0",
        "rollup-plugin-import-url": "^1.0.1",
        "terser": "^5.3.2",
        "ts-node": "^9.0.0",
        "typescript": "^4.0.2"
    },
    "peerDependencies": {
        "postcss": "8.x",
        "rollup": "2.x"
    },
    "prettier": {
        "tabWidth": 4,
        "singleQuote": false
    }
}
