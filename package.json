{
    "name": "estack",
    "version": "0.16.0",
    "description": "simple bundle generator",
    "module": "src/cli.js",
    "main": "cli.js",
    "scripts": {
        "clear": "rm -rf ./tests/basic/public",
        "test": "npm run clear && mocha -r  ts-node/register tests/**/*.test.ts",
        "build": "rollup -c",
        "dev": "rollup -c -w",
        "dev:site": "node cli.js dev site/**/*.{html,md};site/src/config.yaml",
        "build:site": "node cli.js build site/**/*.{html,md};site/src/config.yaml docs --href /estack/",
        "prepare": "npm run build  && npm run test"
    },
    "author": "UpperCod",
    "license": "ISC",
    "publishConfig": {
        "access": "public"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/atomicojs/estack"
    },
    "bin": {
        "estack": "./cli.js"
    },
    "dependencies": {
        "chokidar": "^3.4.2",
        "postcss": "^8.0.3",
        "rollup": "^2.26.11"
    },
    "estack": {
        "build": {
            "js": {
                "extensions": [],
                "plugins": {}
            }
        }
    },
    "devDependencies": {
        "@rollup/plugin-commonjs": "^11.1.0",
        "@rollup/plugin-json": "^4.0.3",
        "@rollup/plugin-node-resolve": "^7.1.3",
        "@rollup/plugin-replace": "^2.3.1",
        "@rollup/plugin-typescript": "^5.0.2",
        "@types/chai": "^4.2.12",
        "@types/colors": "^1.2.1",
        "@types/html-escaper": "^3.0.0",
        "@types/js-yaml": "^3.12.5",
        "@types/marked": "^1.1.0",
        "@types/mime": "^2.0.3",
        "@types/mocha": "^8.0.3",
        "@types/prismjs": "^1.16.1",
        "@types/resolve": "^1.17.1",
        "@types/sade": "^1.7.2",
        "@uppercod/cache": "^1.0.0",
        "@uppercod/find-port": "^1.0.0",
        "@uppercod/get-prop": "^1.0.1",
        "@uppercod/hash": "^1.0.0",
        "@uppercod/map-object": "^1.1.2",
        "@uppercod/postcss-import": "^1.3.0",
        "@uppercod/request": "^1.1.2",
        "@uppercod/str-fragment": "^1.2.1",
        "builtin-modules": "^3.1.0",
        "chai": "^4.2.0",
        "colors": "^1.4.0",
        "easy-tag-for-liquidjs": "^1.0.1",
        "esm": "^3.2.25",
        "fast-glob": "^3.2.4",
        "html-escaper": "^3.0.0",
        "js-yaml": "^3.14.0",
        "liquidjs": "^9.14.0",
        "magic-string": "^0.25.7",
        "marked": "^1.1.1",
        "mime": "^2.4.6",
        "mocha": "^8.1.3",
        "prismjs": "^1.19.0",
        "resolve": "^1.17.0",
        "rollup-plugin-import-url": "^1.0.1",
        "sade": "^1.7.3",
        "ts-node": "^9.0.0",
        "typescript": "^4.0.2"
    },
    "peerDependencies": {
        "postcss": "^7.0.32"
    },
    "prettier": {
        "tabWidth": 4,
        "singleQuote": false
    }
}
