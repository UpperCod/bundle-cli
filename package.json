{
  "name": "estack",
  "version": "0.5.0",
  "description": "simple bundle generator",
  "module": "src/cli.js",
  "main": "cli.js",
  "scripts": {
    "clear": "rm -rf ./test/basic/dest && rm -rf ./test/basic/public",
    "test": "npm run clear && ava",
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "build:example:watch": "node cli.js example/src/**/*.{html,md} example/dest --server --watch --sourcemap",
    "build:example": "node cli.js example/src/**/*.{html,md} example/dest --minify --sizes  --sourcemap --silent",
    "prepare": "npm run build && npm run test"
  },
  "author": "UpperCod",
  "license": "ISC",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/atomicojs/estack"
  },
  "dependencies": {
    "rollup": "^2.17.0"
  },
  "bin": {
    "estack": "./cli.js"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^13.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^7.1.3",
    "@rollup/plugin-replace": "^2.3.3",
    "@rollup/plugin-sucrase": "^3.0.2",
    "ava": "^3.9.0",
    "builtin-modules": "^3.1.0",
    "chokidar": "^3.4.0",
    "colors": "^1.4.0",
    "entities": "^2.0.3",
    "esm": "^3.2.25",
    "fast-glob": "^3.2.4",
    "http-proxy-middleware": "^1.0.4",
    "js-yaml": "^3.14.0",
    "liquidjs": "^9.12.0",
    "log-update": "^4.0.0",
    "magic-string": "^0.25.7",
    "marked": "^1.1.0",
    "parse5": "^6.0.0",
    "polka": "^0.5.2",
    "prismjs": "^1.20.0",
    "puppeteer": "^4.0.0",
    "resolve": "^1.17.0",
    "sade": "^1.7.3",
    "sirv": "^1.0.1",
    "stylis": "^4.0.1",
    "terser": "^4.8.0"
  },
  "optionalDependencies": {
    "fsevents": "~2.1.2"
  },
  "ava": {
    "require": [
      "esm"
    ],
    "files": [
      "test/**/*.test.js",
      "src/**/*.test.js"
    ]
  }
}
