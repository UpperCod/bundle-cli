{
  "name": "bundle-cli",
  "version": "0.8.4",
  "description": "simple bundle generator",
  "module": "src/cli.js",
  "main": "cli.js",
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "build:example": "node cli.js example/src/*.html,example/src/*.css example/dist  -e unpkg",
    "build:example:watch": "node cli.js example/src/**.html,example/src/*.css example/dist  -e unpkg -w --server --minify",
    "prepare": "npm run build"
  },
  "author": "UpperCod",
  "license": "ISC",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/atomicojs/bundle-cli"
  },
  "dependencies": {
    "@atomico/rollup-plugin-sizes": "^1.0.3",
    "@babel/core": "^7.7.7",
    "@babel/plugin-transform-react-jsx": "^7.7.7",
    "@babel/preset-env": "^7.7.7",
    "@babel/preset-typescript": "^7.7.7",
    "@rollup/plugin-commonjs": "^11.0.0",
    "@rollup/plugin-node-resolve": "^6.0.0",
    "@rollup/plugin-replace": "^2.3.0",
    "chokidar": "^3.3.1",
    "cssnano": "^4.1.10",
    "fast-glob": "^3.1.1",
    "parse5": "^5.1.1",
    "postcss": "^7.0.25",
    "postcss-import": "^12.0.1",
    "postcss-preset-env": "^6.7.0",
    "resolve": "^1.14.1",
    "rollup": "^1.27.14",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-terser": "^5.1.3",
    "sade": "^1.7.0"
  },
  "bin": {
    "bundle": "./cli.js"
  }
}
